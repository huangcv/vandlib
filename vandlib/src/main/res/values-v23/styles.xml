<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VandBaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundVand</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarVand</item>
        <item name="colorPrimary">@color/colorPrimaryVand</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkVand</item>
        <item name="colorAccent">@color/colorAccentVand</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--主页Activity主题-->
    <style name="VandMainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/colorWindowBackgroundVand</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarVand</item>
        <item name="colorPrimary">@color/colorPrimaryVand</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkVand</item>
        <item name="colorAccent">@color/colorAccentVand</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--启动页的主题-->
    <style name="VandLauncherActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:navigationBarColor">@color/colorNavigationBarVand</item>
        <item name="colorPrimary">@color/colorAccentVand</item>
        <item name="colorPrimaryDark">@color/colorAccentVand</item>
        <item name="colorAccent">@color/colorAccentVand</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>